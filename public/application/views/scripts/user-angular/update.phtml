<br /><br />
<div id="view-content" ng-controller="myCtrl_update" ng-init="displayUser()" >

	<div  >
		<dl class="zend_form">

			<dt id="id-label" style="display: none;">

				<label for="id" ">id</label>

			</dt>

			<dd id="id-element" style="display: none;">
				<input type="text" name="id"  value="{{user.id}}"  ng-model="user.id" />

			</dd>

			<dt id="email-label">

				<label for="email" >Email</label>

			</dt>

			<dd id="email-element">

				<input type="text"   ng-model="user.email" />

			</dd>

			<dt id="login-label">

				<label for="login" >Login</label>

			</dt>

			<dd id="login-element">

				<input type="text" ng-model="user.name" />

			</dd>

			<dt id="password-label">

				<label for="password" >Mot de pass</label>

			</dt>

			<dd id="password-element">

				<input type="password"  ng-model="user.password" />

			</dd>



			<dt id="password-label">

				<label for="password" >Upload on form submit</label>

			</dt>

			<dd id="password-element">



				<br>Photo:
				<input type="file" ngf-select ng-model="picFile" name="file"  accept="image/*" ngf-max-size="2MB" required  ngf-model-invalid="errorFile" style="display: inline-block;">
				<i ng-show="myForm.file.$error.required">*required</i>
				<i ng-show="myForm.file.$error.maxSize">File too large
					{{errorFile.size / 1000000|number:1}}MB: max 2M</i>
				<img ng-show="myForm.file.$valid" ngf-thumbnail="picFile" class="thumb"  style="display: inline-block;">  <button ng-click="picFile = null" ng-show="picFile" style="display: inline-block;">Remove</button>
			
				<button   ng-click="uploadPic(picFile)"  style="display: inline-block;"> Upload image </button>
				<span class="progress" ng-show="picFile.progress >= 0">
					<div style="width:{{picFile.progress}}%" ng-bind="picFile.progress + '%'"></div>
				</span>
				<span ng-show="picFile.result">Upload Successful</span>
				<span class="err" ng-show="errorMsg">{{errorMsg}}</span>

			</dd>


			<dd id="Modifier-element">
				<button ng-click="updateData();">Modifier</button>
			</dd>
		</dl>

	</div>



	<div >

		<table  >

			<tr ng-repeat="x in data1" >


				<td>{{ x.id }} | {{ x.name }} | {{ x.email }} | </td>

			</tr>

		</table>

	</div>




</div>




